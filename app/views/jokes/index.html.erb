<h2>
	<span>Funny Joke of the Day</span>
</h2>	

      <h3><%= @joke.saying.html_safe %></h3>
		<p>
			Tags:
				<% @joke.tags.each do |tag| %>
				<%= link_to tag.name, tag_path(tag) %>
				<% end %>
		</p>
		<p><%= social_share_button_tag(@joke.saying.truncate(120)) %></p>
<br />
<br />
<br />
<h2>
	<span>Joke Categories</span>
</h2>

<br />
<% @tags.each do |tag| %>
    <div class="col-xs-3 col-sm-2 thumbnail">
      <div class="<%= cycle('square1', 'square2', 'square3', 'square4') -%>">
      	<%= link_to tag.name.titlecase, tag_path(tag) %>
      </div>
    </div>
  <% end %>

<br class="clear" />
