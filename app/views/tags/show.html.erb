<h2><span>Funny <%= @tag.name.titlecase %> Jokes</span></h2>

  <ol class="circle-list">
      <% @tag.jokes.order(:cached_votes_score => :desc).each do |joke| %>
              <%= link_to joke_path(joke) do %>
              <li>
                <span class="joketitle"><%= joke.title %></span>
                &nbsp;&nbsp;&nbsp;
                <span class="jokescore">
                    <% if joke.get_upvotes.size == 0 && joke.get_downvotes.size == 0 %>
                        no votes yet
                    <% else %>    
                        score: <%= joke.cached_votes_score %>
                    <% end %>
                </span>
                <p><%= sanitize joke.saying.truncate_words(10, omission: ' (see more)') %></p>
              </li>
              <% end %>
      <% end %>
  </ol>


